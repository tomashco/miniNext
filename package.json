{
  "type": "module",
  "scripts": {
    "dev": "tsx server.ts --dev",
    "start:dev": "tsx server.ts",
    "start": "node ./build/server.js",
    "build:fastify": "esbuild server.ts `find server \\( -name '*.ts' \\)` --platform=node --target=esnext --outdir=build --format=esm",
    "build": "pnpm run /^build:.*/ && pnpm run copy",
    "copy": "mkdir build/client && cp -r client/dist build/client/dist && cp vite.config.js build && cp client/base.css build/client && cp client/index.html build/client && cp client/index.js build/client",
    "build:client": "vite build --outDir dist/client --ssrManifest",
    "build:server": "vite build --outDir dist/server --ssr /index.js",
    "devinstall": "zx ../../devinstall.mjs -- node server.js --dev",
    "lint": "biome lint ."
  },
  "dependencies": {
    "@fastify/formbody": "^7.4.0",
    "@fastify/one-line-logger": "^1.2.0",
    "@fastify/react": "^0.6.0",
    "@fastify/vite": "^6.0.5",
    "@tanstack/react-query": "^4.35.3",
    "@trpc/client": "^10.45.2",
    "@trpc/react-query": "^10.45.2",
    "@trpc/server": "^10.45.1",
    "@types/react": "^18.2.65",
    "fastify": "^4.24.3",
    "history": "^5.3.0",
    "minipass": "^7.0.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6",
    "superjson": "^2.2.1",
    "unihead": "^0.0.6",
    "valtio": "^1.12.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@biomejs/biome": "1.6.0",
    "@types/node": "^20.11.25",
    "@vitejs/plugin-react": "^4.2.0",
    "esbuild": "^0.20.1",
    "fastify-tsconfig": "^2.0.0",
    "postcss": "^8.4.31",
    "postcss-nesting": "^12.0.2",
    "postcss-preset-env": "^7.7.1",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.7.1",
    "typescript": "^5.4.2",
    "vite": "^5.0.2"
  }
}
